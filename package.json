{
  "name": "@stopfra/monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Stop FRA - Fraud Risk Assessment Platform Monorepo",
  "scripts": {
    "dev:mobile": "pnpm --filter @stopfra/mobile-app start",
    "dev:web": "pnpm --filter @stopfra/web-dashboard dev",
    "dev:backend": "pnpm --filter @stopfra/backend dev",
    "dev:training": "pnpm --filter @stopfra/training-app start",
    "dev:budget": "pnpm --filter @stopfra/budget-guide start",
    "build": "turbo run build",
    "build:web": "pnpm --filter @stopfra/web-dashboard build",
    "build:backend": "pnpm --filter @stopfra/backend build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:backend": "pnpm --filter @stopfra/backend test",
    "db:migrate": "pnpm --filter @stopfra/backend migrate",
    "clean": "rm -rf node_modules apps/*/node_modules apps/fra-backend/backend/node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix"],
    "*.{json,md,yml}": ["prettier --write"]
  },
  "packageManager": "pnpm@9.15.4",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/react": ">=18.0.0"
      }
    },
    "overrides": {
      "@isaacs/brace-expansion": ">=5.0.1"
    }
  }
}
