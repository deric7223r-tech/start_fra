{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@stopfra/ui-core": [
        "../../packages/ui-core/src/index.ts"
      ],
      "@stopfra/ui-core/*": [
        "../../packages/ui-core/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
